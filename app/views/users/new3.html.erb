<div class="container">
    <div class="row" >
       <%= form_for(@user, url: {action: "create3"}) do |f| %>
    <div class= "form-group">
        <div class= "col-md-2 control-label">
            <%=f.label :username %>
        </div>
        <div class="col-md-6">
            <%=f.text_field :username, class: "form-control", placeholder: "Votre Username" %>
        </div>
    </div>
    
    <div class= "form-group">
        <div class= "col-md-2 control-label">
           <%=f.label :email %>
        </div>
        <div class="col-md-6">
            <%=f.text_field :email,rows: 10, class: "form-control", placeholder: "Votre Email" %>
        </div>
    </div>
    <div class= "form-group">
        <div class= "col-md-2 control-label">
           <%=f.label :bio %>
        </div>
        <div class="col-md-6">
            <%=f.text_area :bio,rows: 10, class: "form-control", placeholder: "Votre Bio" %>
        </div>
    
    <div class= "form-group">
        <div class= "col-sm-offset-2 col-md-10">
        <%= f.submit(@user.new_record? ? "S'inscrire" : "Mettre a jour", class: "btn btn-default") %>
        </div>
    </div>
    </div>
    <%end%>
    </div>
</div>